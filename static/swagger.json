{
  "swagger": "2.0",
  "info": {
    "title": "Cognidy Backend API",
    "version": "1.0.0"
  },
  "securityDefinitions": {
    "Bearer": {
      "type": "apiKey",
      "name": "Authorization",
      "in": "header",
      "description": "JWT Authorization header using the Bearer scheme. Example: 'Bearer {token} "
    }
  },
  "basePath": "/api",
  "paths": {
    "/": {
      "get": {
        "summary": "Say Hello",
        "responses": {
          "200": {
            "description": "Success"
          }
        }
      }
    },
    "/users/signup": {
      "post": {
        "tags": ["Auth"],
        "summary": "User signup",
        "description": "Register a new user with username, email, and password.",
        "parameters": [
          {
            "in": "body",
            "name": "body",
            "description": "User signup data",
            "required": true,
            "schema": {
              "type": "object",
              "properties": {
                "username": { "type": "string" },
                "email": { "type": "string" },
                "password": { "type": "string" }
              },
              "required": ["username", "email", "password"]
            }
          }
        ],
        "responses": {
          "201": { "description": "Signup successful" },
          "400": { "description": "Invalid input or username exists" }
        }
      }
    },
    "/users/login": {
      "post": {
        "tags": ["Auth"],
        "summary": "User login",
        "description": "Login with username and password.",
        "parameters": [
          {
            "in": "body",
            "name": "body",
            "description": "User login data",
            "required": true,
            "schema": {
              "type": "object",
              "properties": {
                "username": { "type": "string" },
                "password": { "type": "string" }
              },
              "required": ["username", "password"]
            }
          }
        ],
        "responses": {
          "200": { "description": "Login successful" },
          "401": { "description": "Invalid credentials" },
          "400": { "description": "Missing fields" }
        }
      }
    },
    "/notes/": {
      "get": {
        "tags": ["Notes"],
        "summary": "Get all user notes",
        "description": "Find all user notes from a given JWT token",
        "security": [{ "Bearer": [] }],
        "responses": {
          "200": { "description": "User Notes Retrieved Successfully" },
          "401": { "description": "Missing or invalid token" }
        }
      }
    },
    "/notes/upload/auth": {
      "post": {
        "tags": ["Notes"],
        "summary": "Generate content for authenticated users",
        "description": "Generate and save flashcards, puzzles and roadmap goals from an uploaded file to MongoDB",
        "consumes": ["multipart/form-data"],
        "security": [{ "Bearer": [] }],
        "parameters": [
          {
            "in": "formData",
            "name": "file",
            "type": "file",
            "required": true,
            "description": "User notes file"
          }
        ],
        "responses": {
          "200": { "description": "Content Generated Successfully" },
          "400": { "description": "Missing or invalid file" },
          "401": { "description": "Missing or invalid token" }
        }
      }
    },
    "/notes/upload/guest": {
      "post": {
        "tags": ["Notes"],
        "summary": "Generate content for guest users",
        "description": "Generate and return flashcards and puzzles from an uploaded file",
        "consumes": ["multipart/form-data"],
        "parameters": [
          {
            "in": "formData",
            "name": "file",
            "type": "file",
            "required": true,
            "description": "User notes file"
          }
        ],
        "responses": {
          "200": { "description": "Content Generated Successfully" },
          "400": { "description": "Missing or invalid file" }
        }
      }
    },
    "/notes/delete/{note_id}": {
      "delete": {
        "tags": ["Notes"],
        "summary": "Deletes user note",
        "description": "Deletes a user note using the given note object id",
        "consumes": ["multipart/form-data"],
        "security": [{ "Bearer": [] }],
        "parameters": [
          {
            "in": "path",
            "name": "note_id",
            "type": "string",
            "required": true,
            "description": "User note object id"
          }
        ],
        "responses": {
          "200": { "description": "Note deleted" },
          "400": { "description": "Missing or invalid file" },
          "404": { "description": "User/Note not found" }
        }
      }
    }
  },
  "tags": [
    {
      "name": "Auth",
      "description": "User authentication and persistance"
    },
    {
      "name": "Notes",
      "description": "User file notes"
    }
  ]
}
